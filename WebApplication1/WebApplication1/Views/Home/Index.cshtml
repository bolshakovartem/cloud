@{
    ViewData["Title"] = "Book Shop";
}

<div class="text-center">
    <div>
        <h3>Sale</h3>
        <table>
            <tr>
                <td><p>Name of a book</p></td>
                <td><p>Author</p></td>
                <td><p>Price</p></td>
                <td></td>
            </tr>
            @{
                foreach (var b in ViewBag.Books)
                {
                    <tr>
                        <td><p>@b.Name</p></td>
                        <td><p>@b.Author</p></td>
                        <td><p>@b.Price</p></td>
                       <td><p><a href="/Home/Buy/@b.Id">Buy</a></p></td>
                       
                    </tr>
                }
            }
        </table>
    </div>
    <h1 class="display-4">Welcome</h1>
    </div>
